{
	"name": "MoradaApp.Api",
	"main": "dist/index.js",
	"author": "MoradaAPP",
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"build:watch": "nest build -w",
		"firestore": "sh -c ./tools/firestore.sh",
		"firestore:seed": "dotenv -e .env -- node ./dist/infra/storages/db/firestore/seed.js",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
		"migrate:create": "dotenv -e .env -- ts-node ./node_modules/typeorm/cli.js migration:create",
		"migrate:generate": "dotenv -e .env -- ts-node ./node_modules/typeorm/cli.js migration:generate -d ./src/infra/storages/db/typeorm/migrations/handler.ts",
		"migrate:run": "dotenv -e .env -- pnpm typeorm migration:run -d ./src/infra/storages/db/typeorm/migrations/handler.ts",
		"migrate:revert": "dotenv -e .env -- pnpm typeorm migration:revert -d ./src/infra/storages/db/typeorm/migrations/handler.ts",
		"migrate:create:prod": "dotenv -e .env -- ts-node ./node_modules/typeorm/cli.js migration:create",
		"migrate:generate:prod": "dotenv -e .env -- ts-node ./node_modules/typeorm/cli.js migration:generate -d ./src/infra/storages/db/typeorm/migrations.prod/handler.ts",
		"migrate:run:prod": "dotenv -e .env -- pnpm typeorm migration:run -d ./src/infra/storages/db/typeorm/migrations.prod/handler.ts",
		"migrate:revert:prod": "dotenv -e .env -- pnpm typeorm migration:revert -d ./src/infra/storages/db/typeorm/migrations.prod/handler.ts",
		"dev": "dotenv -e .env -- nest start --watch",
		"dev:debug": "dotenv -e .env -- nest start --debug 0.0.0.0:9229 --watch",
		"start": "dotenv -e .env.prod -- node ./dist/index.js",
		"lint": "eslint \"{src,tests}/**/*.ts\"",
		"lint:fix": "eslint --fix",
		"format": "prettier --write",
		"test": "dotenv -e .env.test -- jest -c jest.unit.config.ts",
		"test:e2e": "dotenv -e .env.prod -- jest -c jest.e2e.config.ts --detectOpenHandles",
		"set-hooks": "husky install",
		"pre-commit": "lint-staged --allow-empty",
		"gen-docs": "sh -c \"./tools/docs.sh\""
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"(src|tests|docs)/**/*.(t|j)s": [
			"pnpm format",
			"pnpm lint:fix"
		]
	},
	"prisma": {
		"schema": "./src/infra/storages/db/prisma/schema.prisma"
	},
	"dependencies": {
		"@google-cloud/error-reporting": "^3.0.5",
		"@google-cloud/opentelemetry-cloud-trace-exporter": "^2.1.0",
		"@nestjs/axios": "^3.0.2",
		"@nestjs/cache-manager": "^2.2.1",
		"@nestjs/common": "^10.2.10",
		"@nestjs/core": "^10.2.10",
		"@nestjs/event-emitter": "^2.0.3",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/platform-express": "^10.2.10",
		"@nestjs/terminus": "^10.2.0",
		"@nestjs/throttler": "^5.1.0",
		"@nestjs/typeorm": "^10.0.2",
		"@opentelemetry/instrumentation": "^0.49.1",
		"@opentelemetry/instrumentation-express": "^0.36.1",
		"@opentelemetry/instrumentation-http": "^0.49.1",
		"@opentelemetry/instrumentation-nestjs-core": "^0.35.0",
		"@opentelemetry/resources": "^1.22.0",
		"@opentelemetry/sdk-trace-base": "^1.22.0",
		"@opentelemetry/sdk-trace-node": "^1.22.0",
		"@opentelemetry/semantic-conventions": "^1.22.0",
		"axios": "^1.6.5",
		"bcrypt": "^5.1.1",
		"cache-manager": "^5.3.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.3.1",
		"dotenv-cli": "^7.3.0",
		"express": "^4.18.2",
		"firebase-admin": "^11.11.1",
		"nodemailer": "^6.9.7",
		"pg": "^8.11.3",
		"pino": "^8.18.0",
		"pino-pretty": "^10.3.1",
		"reflect-metadata": "^0.1.14",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.0",
		"typeorm": "^0.3.17",
		"winston": "^3.12.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.8.1",
		"@compodoc/compodoc": "^1.1.23",
		"@nestjs/cli": "^10.2.1",
		"@nestjs/testing": "^10.3.4",
		"@opentelemetry/exporter-zipkin": "^1.22.0",
		"@swc/cli": "^0.1.63",
		"@swc/core": "^1.3.101",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.6",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.10.4",
		"@types/nodemailer": "^6.4.14",
		"@types/supertest": "^6.0.2",
		"@types/swagger-ui-express": "^4.1.6",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"commitizen": "^4.3.0",
		"commitlint": "^17.8.1",
		"concurrently": "^8.2.2",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.55.0",
		"eslint-config-standard-with-typescript": "^39.1.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.4.0",
		"eslint-plugin-promise": "^6.1.1",
		"firebase-functions-test": "^3.1.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.2",
		"npm-watch": "^0.11.0",
		"prettier": "^3.1.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	}
}
